{
  "compilerOptions": {
    // "declaration": true,
    // "declarationDir": "build",
    // "outDir": "build",
    // "rootDir": "src",
    // "outDir": "build",
    // "rootDir": "src",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "build",
    "util",
    "src/**/*.stories.tsx",
    "src/**/*.spec.tsx"
  ]
}